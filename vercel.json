{
    "version": 2,
    "builds": [
      {
        "src": "portfolio/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9"
        }
      }
    ],
    "build": {
      "env": {
        "DJANGO_SETTINGS_MODULE": "portfolio.settings.production"
      },
      "commands": [
        "pip install -r requirements.txt",
        "python3.9 manage.py collectstatic --noinput"
      ]
    },
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "portfolio/wsgi.py"
      }
    ]
  }
  
